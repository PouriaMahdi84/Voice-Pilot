import pyautogui
import time
import speech_recognition as sr
import os 
import re 

class SmartAssistant:
    def __init__(self):
        self.recognizer = sr.Recognizer()
        print("‚úÖ Smart Assistant: ASR with speech_recognition initialized.")

    # ASR method
    def listen(self):
        LISTENING_TIMEOUT = 5 
        
        with sr.Microphone() as source:
            print(f"Listening...  {LISTENING_TIMEOUT} seconds...")
            self.recognizer.adjust_for_ambient_noise(source)
            
            try:
                audio = self.recognizer.listen(source, timeout=LISTENING_TIMEOUT, phrase_time_limit=LISTENING_TIMEOUT)
            except sr.WaitTimeoutError:
                print("Listening timeout reached or no input detected.")
                return None
            except Exception as e:
                print(f"Recording error: {e}")
                return None
            
        try:
            text = self.recognizer.recognize_google(audio, language="en-US") 
            print(f"You said: {text}")
            return text
        except sr.UnknownValueError:
            print("I couldn‚Äôt understand. The speech recognition service didn‚Äôt catch the words.")
            return None
        except sr.RequestError as e:
            print(f"Connection error with Google Speech Recognition: {e}")
            return None

    # NLU method
    def understand_intent(self, text):
        text_lower = text.lower()
        
        if any(word in text_lower for word in ["open", "run", "launch", "start"]):
            return "Open_Application"
        elif any(word in text_lower for word in ["close", "exit", "terminate", "stop"]):
            return "Close_Application"
        elif any(word in text_lower for word in ["google", "search", "find out", "what is"]):
            return "Search_Web"
        elif any(word in text_lower for word in ["whatsapp", "telegram", "email", "send a message"]):
            return "Send_Communication"
        elif any(word in text_lower for word in ["shut down pc", "restart computer", "power off", "control system"]):
             return "System_Control"
        else:
            return "unknown"

    # Final Entity Extraction method
    def _extract_entity_simple(self, text, intent):
        text_lower = text.lower()
        
        if intent == "Open_Application":
            open_keywords = ["open", "launch", "start", "run"]
            for keyword in open_keywords:
                if keyword in text_lower:
                    # Ensures proper extraction like 'google chrome'
                    entity_raw = text_lower.split(keyword, 1)[-1].strip() 
                    entity_clean = re.sub(r'\s*(please|app|application|right now|the|a|for|me|program)\s*', ' ', entity_raw).strip()
                    return entity_clean
            return None
            
        elif intent == "Search_Web":
            search_keywords = ["google", "search for", "find out about", "what is"]
            for keyword in search_keywords:
                if keyword in text_lower:
                    # Ensures search query extraction without interfering with Open intent
                    query = text_lower.split(keyword, 1)[-1].strip()
                    return query
            return text_lower
            
        return text 

    # Main execution method
    def execute_command(self, intent, text):
        print(f"üß† Intent: {intent} / Command: {text}")
        
        if intent == "Open_Application":
            app_name = self._extract_entity_simple(text, intent)
            if app_name:
                 self._open_application_pyautogui(app_name)
            else:
                 print("‚ùå Application name not recognized.")
                 
        elif intent == "Close_Application":
            print("üõë Closing the active window...") 
            pyautogui.hotkey('alt', 'f4')
            
        elif intent == "Search_Web":
            query = self._extract_entity_simple(text, intent)
            self._search_web_pyautogui(query)
            
        elif intent == "Send_Communication":
             print(f"üìß Communication feature (e.g., sending a message) - To be developed")

        elif intent == "System_Control":
             # Fixed system control behavior
             print("üñ•Ô∏è Executing system shutdown command (Shutdown /s /t 1)...")
             os.system('shutdown /s /t 1') 
             
        else:
            print("I didn't get that. Please say it more clearly.")

    # PyAutoGUI execution functions
    def _open_application_pyautogui(self, app_name):
        # Mapping spoken app names to Windows Run commands
        app_commands = {
             "chrome": "chrome", 
             "google chrome": "chrome",
             "google": "chrome", 
             "word": "winword", 
             "calculator": "calc",
             "notepad": "notepad", 
             "excel": "excel", 
             "powerpoint": "powerpnt",
             "telegram": "telegram", 
             "vs code": "code",
             "vscode": "code"
        }
        
        command = None
        app_name_lower = app_name.lower()
        
        # Exact match
        if app_name_lower in app_commands:
             command = app_commands[app_name_lower]
        
        # Partial match
        if not command:
             for key, cmd in app_commands.items():
                 if key in app_name_lower:
                      command = cmd
                      break

        if command:
            print(f"üñ•Ô∏è Opening {app_name} with command '{command}'...")
            pyautogui.hotkey('win', 'r')
            time.sleep(0.5)
            pyautogui.write(command)
            pyautogui.press('enter')
        else:
            print(f"‚ùå No Windows command found for '{app_name}'.")
    def _search_web_pyautogui(self, query):
        print(f"üåê Search for: {query}")
        # Open browser
        pyautogui.hotkey('win', 'r')
        time.sleep(0.5)
        pyautogui.write("chrome") 
        pyautogui.press('enter')
        time.sleep(1.5) # wait for Chrome to open
        
        # Type search URL
        import urllib.parse
        encoded_query = urllib.parse.quote_plus(query)
        
        # Clear address bar (Ctrl+L or Alt+D)
        pyautogui.hotkey('ctrl', 'l') 
        pyautogui.write(f"google.com/search?q={encoded_query}")
        pyautogui.press('enter')
        
        print("‚úÖ Web search completed successfully.")
    def run(self):
        print("\nü§ñ Smart Assistant activated!")
        print("-----------------------------------")
        
        while True:
            command = self.listen()
            if command:
                if "exit" in command.lower() or "quit" in command.lower():
                    print("üëã Goodby!")
                    break
                    
                intent = self.understand_intent(command)
                self.execute_command(intent, command)

if __name__ == "__main__":
    try:
         assistant = SmartAssistant()
         assistant.run()
    except Exception as e:
         print(f"Critical error during startup: {e}")
